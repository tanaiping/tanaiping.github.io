/* pages/search/search.wxss */
.search-wrap{
  padding: 20rpx 26rpx;
  margin-bottom: 12rpx solid #755d5d;
  background: #FFF;
}
.search-box{
  width: 500rpx;
  display: flex;
  background: #F6F6F6;
  border-radius: 38rpx;
  height: 60rpx;

}
.picker-com .pick-txt{
  padding: 0 10rpx;
}
.search-icon{
  width: 28rpx;
  height: 28rpx;
  margin:16rpx 20rpx;
}
.clear-icon{
  width: 32rpx;
  height: 32rpx;
  margin:14rpx 20rpx;
}
.goback-btn{
  color: #333;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
}
.search-box input{
  width:400rpx;
  border:none;
  background: transparent;
  height:60rpx;
  font-size: 28rpx;
  color: #000;
}
.result-box{
  padding:30rpx 26rpx
}
.result-elem{
  display: flex;
  padding: 30rpx 0 0 0;
  position: relative;
}
.result-elem .location-icon{
  width: 24rpx;
  height: 30rpx;
  margin-right: 30rpx;
}
.result-elem .address{
  width: 560rpx;
  display: flex;
  flex-direction: column;
}
.result-elem .address .t1{
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
}
.result-elem .address .t2{
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
  border-bottom: 2rpx solid #e9e9e9;
  padding-bottom: 30rpx;
}
.distance{
  color: #006ED8;
  font-size: 24rpx;
  display: flex;
  line-height: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 0rpx;
  top: 30rpx;
  display: flex;
  justify-content: end;
}
.navigate-ico{
  width: 20rpx;
  height: 20rpx;
}