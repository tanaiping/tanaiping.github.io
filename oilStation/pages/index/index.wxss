/**index.wxss**/
.b-bom{
  border-bottom: 12rpx solid #E9E9E9;
}

.headerbg{
  width: 100%;
  height: 206rpx;
  position: absolute;
  left: 0;
  top: 0;
  background-color: #136FD1;
  z-index: 1;
}
.header-logo{
  z-index: 2;
  width: 238rpx;
  height: 58rpx;
  position: absolute;
  left: 26rpx;
  top: 58rpx;
  color: #FFF;
}
.header-box{
  padding:46rpx 26rpx;
  border-bottom: 12rpx solid #E9E9E9;
}
.order-title{
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #FFF;
  z-index: 3;
  position: relative;
  margin-top: 52rpx;
}
.order-title .next-icon{
  color: #fff;
}
.staion-header{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #000;
  z-index: 3;
  position: relative;
}
.next-icon{
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
}
.next-icon image{
  height: 28rpx;
  width: 28rpx;
  margin: 6rpx 0 6rpx 10rpx;
}
button.login-btn{
  padding: 0;
  line-height: 40rpx;
  background: transparent;
  display:inline;
  color: #FFF;
  font-weight: normal;
  font-size: 28rpx;
  width: auto !important;
}
.line-space{
  /* margin: 4rpx 0; */
  display: block;
  background: #fff;
  margin: 9rpx 16rpx;
  height: 22rpx;
  line-height: 22rpx;
  width: 2rpx;
}
.payinfo{
  margin-top: 34rpx;
  box-shadow: 0 8rpx 32rpx rgba(125, 125, 125, 0.12);
  width: 698rpx;
  height: 160rpx;
  background:#FFF;
  position: relative;
  z-index: 3;
  border-radius: 8rpx;
}
.payinfo{
  display: flex;
}
.payinfo .elem{
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.payinfo .elem .t1{
  line-height: 48rpx;
  padding: 28rpx 0 12rpx 0;
  color: #006ED8;
  font-size: 34rpx;
}
.payinfo .elem .t2{
  line-height: 40rpx;
  padding-bottom: 32rpx;
  color: #333;
  font-size: 28rpx;
}
.station-conbox{
  padding: 40rpx 26rpx;
  /* border-bottom: 12rpx solid #E9E9E9; */
}
.station-title .t2{
  color: #999;
  padding-left: 28rpx;
  font-size: 24rpx;
}
.station-list{
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}
.station-img{
  width: 120rpx;
  height: 120rpx;
}
.station-info{
  display: flex;
  flex-direction: column;  
  width: 400rpx;
  padding:0 20rpx;
}
.station-info .name{
  font-size: 28rpx;
  color: #000;
  line-height: 30rpx;
  height: 30rpx;
  padding: 8rpx 0;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.station-info .price{
  line-height: 40rpx;
  height: 40rpx;
  color: #14D2B8;
  font-size: 28rpx;
}
.station-info .price .t2{
 color: #FF732B;
 font-size: 24rpx;
 padding-left: 8rpx;
}
.station-info .address{
  color: #999;
  font-size: 24rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 34rpx;
}
.navigate-box{
  display: flex;
  flex-direction: column;
  width: 144rpx;
  align-items: center;
  height: 120rpx;
  justify-content: center;
}
.navigate-ico{
  width: 20rpx;
  height: 20rpx;
}
.nav-btn{
  width: 100rpx;
  height: 48rpx;
  background-color: #136FD1;
  border-radius: 24rpx;
  font-size: 24rpx;
  line-height: 48rpx;
  text-align: center;
  color: #FFF;
}
.distance{
  color: #006ED8;
  font-size: 24rpx;
}
.oil-card{
  width: 716rpx;
  height: 336rpx;
  margin-top: 16rpx;
}
